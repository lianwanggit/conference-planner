@page "{id:int}"
@model EditConferenceModel
@{
}

<div>
    <ol class="breadcrumb">
        <li><a asp-page="/Admin/AdminPortal">Admin</a></li>
        <li><a asp-page="/Admin/Conferences/ListConferences">Conferences</a></li>
        <li class="active">Edit</li>
    </ol>

    <h3>Edit Conference</h3>
    @if (Model.ShowMessage)
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @Model.Message
        </div>
    }

    <form method="post" class="form-horizontal">
        <input asp-for="Conference.ID" type="hidden" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Conference.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Conference.Name" class="form-control" />
                <span asp-validation-for="Conference.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Conference.StartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Conference.StartDate" class="form-control" />
                <span asp-validation-for="Conference.StartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Conference.EndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Conference.EndDate" class="form-control" />
                <span asp-validation-for="Conference.EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-default" asp-page="ListConferences">Conferences</a>
            </div>
        </div>
    </form>
</div>