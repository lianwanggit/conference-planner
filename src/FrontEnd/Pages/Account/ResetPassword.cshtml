@page
@model ResetPasswordModel
@{
}


<h2>Reset password</h2>

<form method="post" class="form-horizontal">
    <h4>Reset your password.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="ResetPasswordViewModel.Code" type="hidden" />
    <div class="form-group">
        <label asp-for="ResetPasswordViewModel.Email" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ResetPasswordViewModel.Email" class="form-control" />
            <span asp-validation-for="ResetPasswordViewModel.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ResetPasswordViewModel.Password" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ResetPasswordViewModel.Password" class="form-control" />
            <span asp-validation-for="ResetPasswordViewModel.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ResetPasswordViewModel.ConfirmPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ResetPasswordViewModel.ConfirmPassword" class="form-control" />
            <span asp-validation-for="ResetPasswordViewModel.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Reset</button>
            <a class="btn btn-default" asp-page="/Account/Login">Back</a>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}