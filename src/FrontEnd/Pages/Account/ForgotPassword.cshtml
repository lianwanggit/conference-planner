@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h2>@ViewData["Title"]</h2>

<form method="post" class="form-horizontal">
        <h4>Enter your email.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ForgotPasswordViewModel.Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ForgotPasswordViewModel.Email" class="form-control" />
                <span asp-validation-for="ForgotPasswordViewModel.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Submit</button>
                <a class="btn btn-default" asp-page="/Account/Login">Back</a>
            </div>
        </div>
    </form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
